<h1>Articles Listing Page</h1>

<table >
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description%></td>
        <%if article.user%>
        <td><%=link_to article.user.username ,user_path(article.user)%></td>
        <%end%>
         <td><%= link_to'Show',article_path(article.id)%></td>
         <%if logged_in? && (article.user == current_user || current_user.admin?)%>
         <td><%= link_to'Edit',edit_article_path(article.id)%></td>
        <td><%= link_to "Delete", article_path(article.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
        <%end%>
      </tr>
    <% end %>
     
  </tbody>
</table>

<p>
<%if logged_in? %>
<%= link_to'Create New Article',new_article_path%> <%end%>| <%= link_to'Main Page',root_path%> | <%if logged_in?%> 
 
 <%=link_to current_user.username,user_path(current_user) %> <%=("Admin") if current_user.admin? %>| 
 <%=link_to "Logout",logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> | 

 <%else%>
<%= link_to 'Login',login_path%> 
<%end%> </p>


