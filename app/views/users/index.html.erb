<h1>Alpha bloggers</h1>

<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
  </div>
<table >
  <thead>
    <tr>
      <th>Articles</th>
      <th>User</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= pluralize(user.articles.count,"article") %></td>
        <td><%=link_to user.username,user_path(user.id)%></td>
         <td><%= link_to'View profile',user_path(user.id)%></td>
        <%if logged_in? && user==current_user%>
         <td><%= link_to'Edit Profile',edit_user_path(user.id)%></td>
      </tr>
      <%end%>
    <% end %>
     
  </tbody>
</table>
<p><%if logged_in?%><%= link_to'Create New Article',new_article_path%><%end%> | <%= link_to'Main Page',root_path%> | <%=link_to 'Create New User',signup_path%> </p>

